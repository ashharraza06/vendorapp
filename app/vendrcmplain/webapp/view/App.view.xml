										path: '/vendor'
							}">
																<columns>

																	<Column width="100px">
																		<Text text="PAN Number" />
																	</Column>
																	<Column width="100px">
																		<Text text="Vendor Code" />
																	</Column>
																</columns>
																<items>
																	<ColumnListItem vAlign="Middle">
																		<cells >
																			<Text text="{panno}"></Text>
																			<Text text="{vencode}"></Text>
																		</cells>
																	</ColumnListItem>
																</items>
