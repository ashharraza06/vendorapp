<mvc:View controllerName="vendrcmplain.controller.App"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m"
	xmlns:u ="sap.uxap"
	xmlns:core="sap.ui.core"
	xmlns:upload="sap.m.upload">
	<NavContainer id="wizardNavContainer" height="100vh">
		<pages>
			<Page id="wizardContentPage" showHeader="false">
				<content>
					<Wizard id="VendorComplain" class="height1" renderMode="Page" navigationChange= "change">
						<WizardStep id="PanStep" title="PAN Details" validated="false" activate="StepOne">

							<Table id="panTable" inset="false" mode="SingleSelect" items="{
										path: '/vendor'
							}" selectionChange="panrowchange">
								<columns >

									<Column width="200px">
										<Text text="PAN Number" />
									</Column>
									<Column minScreenWidth="Tablet" demandPopin="true">
										<Text text="Vendor Code" />
									</Column>
								</columns>
								<items>
									<ColumnListItem vAlign="Middle">
										<cells >
											<Text text="{panno}"></Text>
											<Text id = "vc" text="{vencode}"></Text>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
							<!-- <Text id="t1" class="sapUiSmallMarginBottom" text="Sedtum, mi et tristique ullamcorper, sapien sapien faucibus sem, quis pretium nibh lorem malesuada diam. Nulla quis arcu aliquet, feugiat massa semper, volutpat diam. Nam vitae ante posuere, molestie neque sit amet, dapibus velit. Maecenas eleifend tempor lorem. Mauris vitae elementum mi, sed eleifend ligula. Nulla tempor vulputate dolor, nec dignissim quam convallis ut. Praesent vitae commodo felis, ut iaculis felis. Fusce quis eleifend sapien, eget facilisis nibh. Suspendisse est velit, scelerisque ut commodo eget, dignissim quis metus. Cras faucibus consequat gravida. Curabitur vitae quam felis. Phasellus ac leo eleifend, commodo tortor et, varius quam. Aliquam erat volutpat"/> -->
						</WizardStep>
						<WizardStep id="PoStep" validated="false" title="PO Details" activate="StepTwo">
							<Table id="idProductsTable" inset="false" mode="SingleSelect" items="{
								path: '/poheader'

									}" selectionChange="porowchange">

								<columns>
									<Column width="200px">
										<Text text="PO Number" />
									</Column>
									<Column demandPopin="true">
										<Text text="Vendor Code" />
									</Column>
									<Column demandPopin="true">
										<Text text="Amount" />
									</Column>
								</columns>
								<items>
									<ColumnListItem vAlign="Middle" press="onPress">
										<cells>
											<Text text="{pono}"></Text>
											<Text text="{vendor}"></Text>
											<Text text="{amount}"></Text>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</WizardStep>
						<WizardStep id="ComplainCreationStep" validated="false" activate="StepThree" title="Complaints">
							<u:ObjectPageLayout id="Object3stepPage" upperCaseAnchorBar="false" flexEnabled="true" height="600px" showFooter="true">
								<u:sections>
									<u:ObjectPageSection titleUppercase="false" title="Complaint Table">
										<u:subSections>
											<u:ObjectPageSubSection titleUppercase="false">
												<u:blocks>

													<Table id="complainTable" inset="false" items="{
														path: '/complains'
															}">
														<columns>
															<Column width="200px">
																<Text text="Complaint No" />
															</Column>
															<Column demandPopin="true">
																<Text text="PO Number" />
															</Column>
															<Column demandPopin="true">
																<Text text="Vendor Code" />
															</Column>
															<Column demandPopin="true">
																<Text text="Status" />
															</Column>
														</columns>
														<items>
															<ColumnListItem type="Navigation" press="onListPressed" vAlign="Middle">
																<cells>
																	<Text text="{complainno}"></Text>
																	<Text text="{cpono}"></Text>
																	<Text text="{cvencode}"></Text>
																	<Text text="{cstatus}"></Text>
																</cells>
															</ColumnListItem>
														</items>
													</Table>
												</u:blocks>
											</u:ObjectPageSubSection>
										</u:subSections>
									</u:ObjectPageSection>
									<u:ObjectPageSection titleUppercase="false" title="Raise a Complaint">
										<u:subSections>
											<u:ObjectPageSubSection>
												<u:blocks>
													<!-- <Text text="Raise a Complaint" class="sapMTitle sapMTitleStyleH3 myHeaderText"/> -->
													<VBox id = "mainvbox" class = "customVbox">
														<Label id= "sv" text="Selected Vendor Code:"/>
														<Text id="vencode"  class = "vencode" text="Value" />
														<Label id= "sp" text="Selected PO Number is:"/>
														<Text id="pono" class = "vencode" text="Value"/>
														<Label id= "ci" text="Complaint is about:"/>
														<Select selectedKey="complintype" id="ordr" change="textchange">
															<core:Item key = "delay" id= "dp" text="Delay in Payment"/>
															<core:Item key = "wrong" id= "wp" text="Wrong Payment"/>
															<core:Item key = "tds" id= "tdsi" text="TDS issue"/>
															<core:Item key = "gst" id= "gsti" text="GST issue"/>
															<core:Item key = "othrs" id= "others" text="Others"/>
														</Select>
														<Label id = "desccomp" text="Describe your Complaint:"/>
														<TextArea id = "textcomp" width = "100%" height = "130px" valueState="{/complnabt}" liveChange="textchange"/>

														<!-- <Button core:require="{ handler: 'project1/ext/fragment/Complaint'}" text="Complaint" press="handler.onPress" /> -->
													</VBox>
												</u:blocks>
											</u:ObjectPageSubSection>
										</u:subSections>
									</u:ObjectPageSection>
									<u:ObjectPageSection titleUppercase="false" title="Attachments">
										<u:subSections>
											<u:ObjectPageSubSection>
												<u:blocks>
													<!-- Attachment Section starts -->
													<!-- <Text text="Attachments" class="sapMTitle sapMTitleStyleH3 myHeaderText"/> -->
													<VBox id= "11" class = "attachvbox">

														<upload:UploadSet id="uploadSet" instantUpload="false" uploadEnabled="true" mode="None" afterItemAdded="handler.onAfterItemAdded" uploadCompleted="handler.onUploadCompleted" items="{
								path: '/files',
								parameters: {
									$orderby: 'createdAt desc'
								},
								templateShareable: false}">
															<upload:toolbar>
															</upload:toolbar>
															<upload:items>
																<upload:UploadSetItem id="ddd" fileName="{fileName}" mediaType="{mediaType}" url="{url}" thumbnailUrl="{
								path: 'mediaType',
								formatter: 'handler.formatThumbnailUrl'
									}" enabledEdit="false" openPressed="handler.onOpenPressed" removePressed="handler.onRemovePressed">
																	<upload:attributes>
																		<ObjectAttribute id="dd" title="Uploaded By" text="{createdBy}" active="false" />
																		<ObjectAttribute id="dd22" title="Uploaded on" text="{createdAt}" active="false" />
																		<ObjectAttribute id="dddw2" title="File Type" text="{mediaType}" active="false" />
																		<ObjectAttribute id="dd22a" title="File Size" text="{size}" active="false" />
																	</upload:attributes>
																</upload:UploadSetItem>
															</upload:items>
														</upload:UploadSet>
													</VBox>
												</u:blocks>
											</u:ObjectPageSubSection>
										</u:subSections>
									</u:ObjectPageSection>
								</u:sections>
							</u:ObjectPageLayout>
