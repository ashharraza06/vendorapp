						<WizardStep id="ReviewStep" activate="StepFour" complete="pricingComplete" validated="false" title="Preview">
							<u:ObjectPageLayout id="Object4stepPage" upperCaseAnchorBar="false" flexEnabled="true" height="600px" showFooter="true">
								<u:sections>
									<u:ObjectPageSection titleUppercase="false" title="PAN Details">
										<u:subSections>
											<u:ObjectPageSubSection titleUppercase="false">
												<u:blocks>
													<VBox id ="revsec1">
														<!-- <Text text="Selected Pan Details:" class="sapMTitle sapMTitleStyleH3 myHeaderText"/> -->
														<HBox id = "rev1hbox" class ="revHbox">
